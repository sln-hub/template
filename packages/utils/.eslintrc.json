{
  "extends": [
    "plugin:@nx/react",
    "../../.eslintrc.json",
    "../../.eslintrc.ts.json"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "project": [
      "./packages/utils/tsconfig.lib.json",
      "./packages/utils/tsconfig.spec.json"
    ],
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "ignorePatterns": [
    "!**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "rules": {}
    }
  ]
}
