      "border-bottom-width",
      "border-bottom-style",
      "border-left",
      "border-left-color",
      "border-left-width",
      "border-left-style",
      "border-radius",
      "border-top-left-radius",
      "border-top-right-radius",
      "border-bottom-right-radius",
